<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/masstechLogo"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:src="@drawable/appbrandlogo" />

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="1sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/masstechLogo"
        android:layout_centerHorizontal="true"
        android:background="@android:color/darker_gray"
        tools:ignore="SmallSp" />


    <RelativeLayout
        android:id="@+id/layout123"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_marginBottom="3dp">

        <TextView
            android:id="@+id/langSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language Selection"
            android:textSize="43sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="10sp"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/langSelect"
            android:layout_marginTop="10dp"
            android:id="@+id/rg_language"
            android:layout_marginBottom="10dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  English"
                android:textSize="37dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  हिंदी "
                android:textSize="37dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  मराठी "
                android:textSize="37dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"/>
        </RadioGroup>

        <Button
            android:layout_width="220dp"
            android:layout_height="70dp"
            android:layout_below="@+id/rg_language"
            android:gravity="center"
            android:text="Submit"
            android:textSize="30dp"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="90dp"
            android:background="@drawable/mybutton"
            />


    </RelativeLayout>
    <TextView
        android:id="@+id/mywidget"
        android:layout_below="@+id/layout123"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:ellipsize="marquee"
        android:textSize="25dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:fadingEdge="horizontal"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:textColor="@android:color/black"
        android:background="#D3D3D3"
        android:text="Please select language       Please select language       Please select language       Please select language       Please select language       Please select language       Please select language       "
        android:singleLine="true" />
</RelativeLayout>