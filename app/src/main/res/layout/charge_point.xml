<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        android:id="@+id/layout_detail"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@android:color/darker_gray">
            <LinearLayout
                android:id="@+id/over_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="#f9f7f7"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="2">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1.98"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_cpname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Charge Point #01"
                            android:textSize="35sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="18dp"
                            android:textStyle="bold"
                            android:textColor="#676767"/>

                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".9"
                        android:orientation="vertical"
                        android:paddingLeft="40dp"
                        android:paddingRight="40dp"
                        android:weightSum="2">


                        <TextView
                            android:id="@+id/txt_rate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=" ₹ 2000.00"
                            android:textSize="60sp"
                            android:layout_marginRight="28dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:textColor="#da0404"/>
                        <TextView
                            android:id="@+id/txt_rt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=" 7₹ per unit"
                            android:layout_gravity="right"
                            android:textSize="40sp"
                            android:layout_marginRight="250dp"
                            android:gravity="center"
                            android:layout_marginBottom="40dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:weightSum="3"
                        android:paddingRight="40dp"
                        android:paddingLeft="40dp"
                        android:visibility="gone"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/bg_blueii"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/txt_voltage_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="000"
                                android:textStyle="bold"
                                android:textColor="#94a316"
                                android:textSize="56sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Voltage"
                                android:textColor="#666666"
                                android:textSize="28sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/bg_blueiii"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/txt_current_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00.00"
                                android:textStyle="bold"
                                android:textColor="#fbb424"
                                android:textSize="56sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Current"
                                android:textColor="#666666"
                                android:textSize="28sp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/bg_blueiv"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/txt_power_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="000"
                                android:textStyle="bold"
                                android:textColor="#78012b"
                                android:textSize="56sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Power"
                                android:textColor="#666666"
                                android:textSize="28sp"/>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".9"
                        android:weightSum="3"
                        android:paddingRight="45dp"
                        android:paddingLeft="45dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_marginLeft="85dp"
                            android:layout_marginRight="45dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/border_unit"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/txt_unit_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00.00"
                                android:textColor="#fa7808"
                                android:textSize="50sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Unit"
                                android:textColor="#666666"
                                android:textSize="20sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_marginLeft="45dp"
                            android:layout_marginRight="45dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/border_etime"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/txt_etime_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="34.00"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="#27cad3"
                                android:textSize="50sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Elapsed Time"
                                android:layout_marginTop="16dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="#666666"
                                android:textSize="20sp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_marginLeft="45dp"
                            android:layout_marginRight="85dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/border_status"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/txt_status_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Idle"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="#0b4366"
                                android:textSize="40sp"/>


                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/mywidget"
                        android:layout_below="@+id/layout123"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:ellipsize="marquee"
                        android:textSize="25dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:fadingEdge="horizontal"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:textColor="@android:color/black"
                        android:background="#D3D3D3"
                        android:text="Full detail information here     Full detail information here      Full detail information here      Full detail information here       Full detail information here       Full detail information here      Full detail information here    "
                        android:singleLine="true"
                        android:layout_weight=".1"/>
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
